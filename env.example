# ===========================================
# Flowgence - Environment Variables
# ===========================================

# ===========================================
# Application
# ===========================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# ===========================================
# Database (Supabase)
# ===========================================
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ===========================================
# Database (PostgreSQL - Local Development)
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=flowgence

# ===========================================
# Redis
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# JWT Authentication
# ===========================================
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_REFRESH_EXPIRES_IN=30d

# ===========================================
# OpenAI API
# ===========================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# ===========================================
# Anthropic Claude API
# ===========================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-sonnet-20240229

# ===========================================
# Pinecone (Vector Database)
# ===========================================
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=flowgence-requirements

# ===========================================
# File Storage
# ===========================================
# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=flowgence-uploads

# Cloudflare R2 (Alternative)
CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key_id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
CLOUDFLARE_R2_BUCKET_NAME=flowgence-uploads
CLOUDFLARE_R2_ENDPOINT=your_r2_endpoint

# ===========================================
# Email Service
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ===========================================
# Monitoring & Analytics
# ===========================================
SENTRY_DSN=your_sentry_dsn_here
POSTHOG_KEY=your_posthog_key_here
POSTHOG_HOST=https://app.posthog.com

# ===========================================
# External Services
# ===========================================
# n8n Webhook
N8N_WEBHOOK_URL=http://localhost:5678/webhook

# Temporal
TEMPORAL_HOST=localhost
TEMPORAL_PORT=7233

# ===========================================
# Notion API
# ===========================================
# Notion 개발자 포털에서 발급받은 API 키
NEXT_PUBLIC_NOTION_API_KEY=secret_your_api_key_here

# Notion 데이터베이스 ID (UUID 형식)
NEXT_PUBLIC_NOTION_DATABASE_ID=your_database_id_here

# ===========================================
# Development
# ===========================================
DEBUG=true
LOG_LEVEL=debug
CORS_ORIGIN=http://localhost:3000

# ===========================================
# Security
# ===========================================
BCRYPT_ROUNDS=12
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# ===========================================
# File Upload
# ===========================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,txt,md
UPLOAD_PATH=./uploads
